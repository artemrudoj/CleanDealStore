<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mipt.artem.cleandealstore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.CleanDealStoreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".goods.category.CategoriesListContainerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity  android:name=".goods.item.info.ItemInfoActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".shoppingcart.ShoppingCartActivity"
            android:launchMode="singleTop"/>
    </application>

</manifest>