<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/goods_icon_iv"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <TextView
            android:id="@+id/goods_name_tv"
            android:layout_toRightOf="@+id/goods_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            tools:text="asdsd"/>
        <TextView
            android:id="@+id/count_name_tv"
            android:layout_below="@+id/goods_name_tv"
            android:layout_toRightOf="@+id/goods_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:text="@string/count"/>
        <ImageButton
            android:id="@+id/add_item_ib"
            android:layout_below="@+id/goods_name_tv"
            android:layout_toRightOf="@+id/count_name_tv"
            android:layout_marginLeft="16dp"
            android:src="@drawable/vector_add"
            android:tint="@android:color/darker_gray"
            android:background="@null"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/count_tv"
            android:paddingLeft="16dp"
            android:layout_below="@+id/goods_name_tv"
            android:layout_toRightOf="@+id/add_item_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="1"/>
        <ImageButton
            android:id="@+id/delcrease_item_ib"
            android:layout_below="@+id/goods_name_tv"
            android:layout_toRightOf="@+id/count_tv"
            android:layout_marginLeft="16dp"
            android:src="@drawable/vector_decrease"
            android:tint="@android:color/darker_gray"
            android:background="@null"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/price_name_tv"
            android:layout_below="@+id/add_item_ib"
            android:layout_toRightOf="@+id/goods_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:text="@string/price"/>
        <TextView
            android:id="@+id/price_tv"
            android:paddingLeft="16dp"
            android:layout_below="@+id/add_item_ib"
            android:layout_toRightOf="@+id/price_name_tv"
            android:textColor="?colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="1"/>
        <ImageButton
            android:id="@+id/del_item_ib"
            android:layout_below="@+id/goods_name_tv"
            android:layout_alignParentRight="true"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentBottom="true"
            android:src="@drawable/vectro_delete"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>