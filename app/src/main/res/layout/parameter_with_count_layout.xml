<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/parameter_name_tv"
        android:layout_width="112dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        tools:text="@string/count"/>
    <ImageButton
        android:id="@+id/add_item_ib"
        android:layout_marginLeft="16dp"
        android:src="@drawable/vector_add"
        android:tint="@android:color/darker_gray"
        android:background="@null"
        android:layout_width="24dp"
        android:layout_gravity="center_vertical"
        android:layout_height="24dp" />
    <TextView
        android:id="@+id/count_tv"
        android:paddingLeft="8dp"
        android:layout_gravity="center_vertical"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14dp"
        android:maxLines="1"
        android:gravity="right"
        tools:text="11"/>
    <TextView
        android:id="@+id/parameter_dim_tv"
        android:paddingLeft="2dp"
        android:layout_gravity="center_vertical"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14dp"
        android:maxLines="1"
        android:gravity="left"
        tools:text="шт."/>
    <ImageButton
        android:id="@+id/sub_item_ib"
        android:layout_marginLeft="8dp"
        android:src="@drawable/vector_decrease"
        android:tint="@android:color/darker_gray"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</LinearLayout>