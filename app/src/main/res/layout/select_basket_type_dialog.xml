<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:theme="@style/AppTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:background="?colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:textSize="16sp"
        android:text="Выберите куда добавить товар"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:background="?colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
    <TextView
        android:id="@+id/count_info_tv"
        android:textColor="?colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        tools:text="@string/count_info_for_subscription"/>
    <com.mipt.artem.cleandealstore.ui.NumberPickerWithArrows
        android:layout_gravity="center"
        android:id="@+id/number_picker_with_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.mipt.artem.cleandealstore.ui.NumberPickerWithArrows>
    <TextView
        android:id="@+id/additional_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorPrimary"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="12sp"
        tools:text="@string/addtitional_info_for_subscription"/>
    <include android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        layout="@layout/dialog_bottom_buttons"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
</LinearLayout>